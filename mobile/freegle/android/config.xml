<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1129" id="org.ilovefreegle.direct" version="2.0.107" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Freegle</name>
    <description>Offer and request free items on your local Freegle reuse group</description>
    <author email="geeks@ilovefreegle.org" href="https://ilovefreegle.org">Chris Cant, Freegle Ltd</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="wss:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="android">
      <preference name="android-minSdkVersion" value="22" />
      <preference name="android-compileSdkVersion" value="30" />
      <preference name="android-targetSdkVersion" value="30" />
      <preference name="AndroidLaunchMode" value="singleTask" />
      <preference name="GradlePluginGoogleServicesEnabled" value="true" />
      <preference name="GradlePluginGoogleServicesVersion" value="4.3.5" />
    </platform>
    <splash density="ldpi" height="426" orientation="portrait" platform="android" src="package-assets/FreegleSplash_320x426.png" width="320" />
    <splash density="mdpi" height="470" orientation="portrait" platform="android" src="package-assets/FreegleSplash_320x470.png" width="320" />
    <splash density="hdpi" height="640" orientation="portrait" platform="android" src="package-assets/FreegleSplash_480x640.png" width="480" />
    <splash density="xhdpi" height="960" orientation="portrait" platform="android" src="package-assets/FreegleSplash_720x960.png" width="720" />
    <splash density="ldpi" height="320" orientation="landscape" platform="android" src="package-assets/FreegleSplash_426x320.png" width="426" />
    <splash density="mdpi" height="320" orientation="landscape" platform="android" src="package-assets/FreegleSplash_470x320.png" width="470" />
    <splash density="hdpi" height="480" orientation="landscape" platform="android" src="package-assets/FreegleSplash_640x480.png" width="640" />
    <splash density="xhdpi" height="720" orientation="landscape" platform="android" src="package-assets/FreegleSplash_960x720.png" width="960" />
    <splash density="xlarge" height="960" orientation="portrait" platform="android" src="package-assets/FreegleSplash_640x960.png" width="640" />
    <splash density="large" height="800" orientation="portrait" platform="android" src="package-assets/FreegleSplash_480x800.png" width="480" />
    <splash density="small" height="320" orientation="portrait" platform="android" src="package-assets/FreegleSplash_240x320.png" width="240" />
    <splash density="normal" height="480" orientation="portrait" platform="android" src="package-assets/FreegleSplash_320x480.png" width="320" />
    <platform name="android">
        <resource-file src="package-assets/colors.xml" target="/app/src/main/res/values/colors.xml" />
        <icon background="@color/background" density="ldpi" foreground="package-assets/FreegleLaunch36.png" />
        <icon background="@color/background" density="mdpi" foreground="package-assets/mipmap-mdpi/fr_launcher.png" />
        <icon background="@color/background" density="hdpi" foreground="package-assets/mipmap-hdpi/fr_launcher.png" />
        <icon background="@color/background" density="xhdpi" foreground="package-assets/mipmap-xhdpi/fr_launcher.png" />
        <icon background="@color/background" density="xxhdpi" foreground="package-assets/mipmap-xxhdpi/fr_launcher.png" />
        <icon background="@color/background" density="xxxhdpi" foreground="package-assets/mipmap-xxxhdpi/fr_launcher.png" />
    </platform>
    <platform name="android">
        <preference name="SplashMaintainAspectRatio" value="false" />
        <preference name="SplashScreenDelay" value="1000" />
        <preference name="FadeSplashScreen" value="false" />
    </platform>
    <platform name="android">
        <resource-file src="google-services.json" target="app/google-services.json" />
        <resource-file src="alert.mp3" target="app/alert.mp3" />
    </platform>
    <hook src="scripts/before_build.sh" type="before_build" />
    <hook platform="android" src="scripts/remove_permissions.js" type="after_prepare" />
</widget>
